<% @plants.each do |plant| %>
  <tr>
    <td><%= check_box_tag "plant[]", plant.id %></td>
    <td><%= plant.name %></td>
    <td><%= plant.comment %></td>
    <td><%= link_to 'Show', plant %></td>
    <td><%= link_to 'Edit', edit_plant_path(plant) %></td>
    <td><%= link_to 'Destroy', plants2_path(plant), confirm: 'Are you sure?', :method => :delete, :class => "delete_plant" %></td>
  </tr>

<% end %>

